generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String
  role        Role         @default(STUDENT)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  enrollments Enrollment[]
  passkeys    Passkey[]
  payments    Payment[]
}

model Course {
  id          String       @id @default(uuid())
  code        String
  title       String?
  description String?
  level       Level
  semester    Semester
  session     String
  lecturer    String?
  price       Float?       @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  enrollments Enrollment[]
  lessons     Lesson[]
  payments    Payment[]

  @@unique([code, session, semester, level])
}

model Lesson {
  id           String      @id @default(uuid())
  title        String
  description  String
  type         ContentType
  fileUrl      String
  fileSize     Int
  instructions String?
  courseId     String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  course       Course      @relation(fields: [courseId], references: [id])
}

model Enrollment {
  id        String   @id @default(uuid())
  userId    String
  courseId  String?
  startsAt  DateTime @default(now())
  expiresAt DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  course    Course?  @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Payment {
  id        String   @id @default(uuid())
  userId    String
  amount    Float
  reference String   @unique
  status    String
  courseId  String?
  createdAt DateTime @default(now())
  course    Course?  @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Passkey {
  id          String   @id @default(uuid())
  code        String   @unique
  isUsed      Boolean  @default(false)
  generatedBy String
  userEmail   String?
  createdAt   DateTime @default(now())
  creator     User     @relation(fields: [generatedBy], references: [id])
}

model SystemSetting {
  key   String @id
  value String
}

enum Role {
  STUDENT
  ADMIN
}

enum Level {
  L_100 @map("100")
  L_200 @map("200")
  L_300 @map("300")
  L_400 @map("400")
  L_500 @map("500")
}

enum Semester {
  FIRST
  SECOND
}

enum ContentType {
  VIDEO
  AUDIO
  PDF
}
