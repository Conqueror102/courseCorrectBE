generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



enum Role {
  STUDENT
  ADMIN
}

enum Level {
  L_100 @map("100")
  L_200 @map("200")
  L_300 @map("300")
  L_400 @map("400")
  L_500 @map("500")
}

enum Semester {
  FIRST
  SECOND
}

enum ContentType {
  VIDEO
  AUDIO
  PDF
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  name         String
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  enrollments  Enrollment[]
  payments     Payment[]
  passkeys     Passkey[] // Passkeys generated by Admin
}

model Course {
  id          String   @id @default(uuid())
  code        String   // e.g., CSC101 (Uppercase)
  title       String?  // Optional, can be populated from metadata
  description String?
  level       Level
  semester    Semester
  session     String   // e.g., "2024/2025"
  lecturer    String?  
  price       Float?   @default(0) // Kept if needed, though mostly via Enrollment
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessons     Lesson[]
  enrollments Enrollment[]
  payments    Payment[]

  @@unique([code, session, semester, level])
}

model Lesson {
  id           String      @id @default(uuid())
  title        String
  description  String
  type         ContentType
  fileUrl      String
  fileSize     Int
  instructions String?
  courseId     String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  course       Course      @relation(fields: [courseId], references: [id])
}

model Enrollment {
  id        String    @id @default(uuid())
  userId    String
  courseId  String?   // Optional if enrollment is "Global" (all courses) or specific? 
                    // PRD says "Access controlled at backend" and "30 days". 
                    // Typically student pays for Access to *Everything* or *Specific Course*?
                    // "Enable lecturers to monetize course content" implies Per Course?
                    // "Access enrolled courses"
                    // "Student selects course -> Payment -> Access"
                    // So Enrollment is per Course.
  
  startsAt  DateTime  @default(now())
  expiresAt DateTime
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  course    Course?   @relation(fields: [courseId], references: [id])
}

model Payment {
  id        String   @id @default(uuid())
  userId    String
  amount    Float
  reference String   @unique // Paystack Reference
  status    String   // success, pending, failed
  courseId  String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  course    Course?  @relation(fields: [courseId], references: [id])
}

model Passkey {
  id          String   @id @default(uuid())
  code        String   @unique
  isUsed      Boolean  @default(false)
  generatedBy String // Admin User ID
  userEmail   String?  // Optional: intended for specific user
  createdAt   DateTime @default(now())
  
  creator     User     @relation(fields: [generatedBy], references: [id])
}

model SystemSetting {
  key   String @id
  value String // JSON or simple string
}